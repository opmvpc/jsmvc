{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 16",

    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./dist",
      "lib": ["es2021"],
      "module": "commonjs",
      "target": "es2021",

      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    }
  }
